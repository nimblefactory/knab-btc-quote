@page
@model QuoteModel
@{
    ViewData["Title"] = "Quote";
}
@if (Model.Quotes.Count == 0)
{
    <div class="py-5 text-center">
        <h2>No quotes found.</h2>
    </div>
}
else
{
    <div class="py-5 text-center">
        <h2>@Model.CryptoName quote</h2>
        <p class="lead">Bellow you will find the latest quote for the selected crypto currency.</p>
    </div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Buy</th>
                <th scope="col" width="150px">For</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var q in Model.Quotes)
            {
                <tr scope="row">
                    <td>1 @q.CryptoSymbol</td>
                    <td>@q.Price</td>
                    <td>@q.CurrencySymbol</td>
                </tr>
            }
        </tbody>
    </table>
}